@model UpdateProductViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Product</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Update" asp-controller="Products" asp-area="Admin" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" placeholder="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desc" class="control-label"></label>
                <textarea asp-for="Desc" id="bodyarticle" class="form-control"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group mt-3 mb-3">
                <label class="control-label">Category</label>
                <select asp-for="CategoryId" class="form-select form-control">
                    <option value="">Select Category</option>
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SKU" class="control-label"></label>
                <input asp-for="SKU" placeholder="Sku Number" class="form-control" />
                <span asp-validation-for="SKU" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags" class="control-label"></label>
                <input asp-for="Tags" placeholder="Multiple Tags" id="tags" class="form-control" />
                <span asp-validation-for="Tags" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" placeholder="Multiple Size" id="size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Brand" class="control-label"></label>
                <input asp-for="Brand" placeholder="Multiple Brands" id="brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Options" class="control-label"></label>
                <input asp-for="Options" placeholder="Multiple Options" id="options" class="form-control" />
                <span asp-validation-for="Options" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" placeholder="Price of Product" type="number" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        CKEDITOR.replace("bodyarticle");
    </script>
    <script>
        var firstElement = document.getElementById('tags');
        var choices1 = new Choices(firstElement, {
            delimiter: ',',
            editItems: true,
            maxItems: 5,
            removeButton: true
        });
        var secondElement = document.getElementById('size');
        var choices2 = new Choices(secondElement, {
            delimiter: ',',
            editItems: true,
            maxItems: 5,
            removeButton: true
        });
        var thirdElement = document.getElementById('brand');
        var choices3 = new Choices(thirdElement, {
            delimiter: ',',
            editItems: true,
            maxItems: 5,
            removeButton: true
        });
        var fourthElement = document.getElementById('options');
        var choices4 = new Choices(fourthElement, {
            delimiter: ',',
            editItems: true,
            maxItems: 5,
            removeButton: true
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
